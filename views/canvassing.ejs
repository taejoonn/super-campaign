<% include ./partials/canvasserNav %>

<div>
    <h2>Campaigns</h2>
    <% for (var i=0; i < campaigns.length; i++ ) { %>
        <form id='forms<%= campaigns[i]._ID %>' action='/canvasser/canvassing/map' method='POST'>
            <%= campaigns[i]._name %>
            <p></p>
            <input type="hidden" name="campaignID" value="<%= campaigns[i]._ID %>">
            <button type="submit" class="btn btn-default">Submit</button>
        </form>sss
        <select name="taskID" form="forms<%= campaigns[i]._ID %>">
            <% for (var j=0; j < tasks[i].length; j++ ) { %>
                <%= tasks[i] %>
                <% if (tasks[i][j]._campaignID == campaigns[i].ID) { %>
                <option value="<%= tasks[i][j]._ID %>">
                    <%= tasks[i][j]._ID %>
                </option>
                <% } %>
            <% } %>
        </select>
    <% } %>
</div>

