<% include ./partials/managerNav %>
<div class="container">
    <div class="table-responsive">
        <h4>Campaigns</h4>
        <table class="table table-hover table-striped">
            <thead class="thead-light">
                <th class="">ID</th>
                <th class="">Campaign Name</th>
                <th class="">Campaign Actions</th>
                <th class="">Assignment</th>
                <th class="">Results</th>

            </thead>
            <tbody>
                <% for (var i=0; i < campaigns.length; i++ ) { %>
                <tr class="">
                    <td class="">
                        <%= campaigns[i]._ID %>
                    </td>
                    <td class="">
                        <%= campaigns[i]._name %>
                    </td>
                    <td class="">
                        <span data-placement="top" data-toggle="tooltip" title="Edit">
                            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"
                                onclick="location.href='/campaign/edit/<%= campaigns[i]._ID %>'">
                                <span class="fas fa-edit"></span>
                            </button>
                        </span>

                        <span data-placement="top" data-toggle="tooltip" title="View">
                            <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"
                                onclick="location.href='/campaign/view/<%= campaigns[i]._ID %>'">
                                <span class="far fa-eye"></span>
                            </button>
                        </span>

                    </td>
                    <td class="">
                        <span data-placement="top" data-toggle="tooltip" title="Create">
                            <button class="btn btn-primary btn-xs" data-title="Delete" data-toggle="modal" data-method="delete"
                                data-target="#delete" onclick="createAssignment('<%= campaigns[i]._ID %>')">
                                <span class="fa fa-plus"></span>
                            </button>
                        </span>
                        <span data-placement="top" data-toggle="tooltip" title="View">
                            <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"
                                onclick="location.href='/manager/view-assignment/<%= campaigns[i]._ID %>'">
                                <span class="far fa-eye"></span>
                            </button>
                        </span>
                    </td>
                    <td class="">
                        <span data-placement="top" data-toggle="tooltip" title="ViewDetail">
                            <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"
                            onclick="location.href='/manager/results/<%= campaigns[i]._ID %>'">
                                <span class="fa fa-folder"></span>
                            </button>
                        </span>
                    </td>
                </tr>
                <% } %>
            </tbody>

        </table>

    </div> <!-- div.table-responsive -->
</div><!-- div.container -->
<% include ./partials/footer %>