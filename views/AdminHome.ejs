<% include ./partials/adminNav %>
<div class="container">
    <div class="table-responsive">
        <h4>Users</h4>
        <table class="table table-hover table-striped">
            <thead class="thead-light">
                <th class="">ID</th>
                <th class="">Username</th>
                <th class="">Full Name</th>
                <th class="">Role</th>
                <th class="">Actions</th>

            </thead>
            <tbody>
                <% for (var i=0; i < users.length; i++ ) { %>
                <tr class="">
                    <td class="">
                        <%= users[i]._employeeID %>
                    </td>
                    <td class="">
                        <%= users[i]._username %>
                    </td>
                    <td class="">
                        <%= users[i]._name %>
                    </td>
                    <td class="">
                        <%= users[i]._permission %>
                    </td>
                    <td class="">
                        <span data-placement="top" data-toggle="tooltip" title="Edit">
                            <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"
                                onclick="location.href='/admin/edit/<%= users[i]._username %>'">
                                <span class="fas fa-edit"></span>
                            </button>
                        </span>

                        <span data-placement="top" data-toggle="tooltip" title="View">
                            <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view"
                                onclick="location.href='/admin/view/<%= users[i]._username %>'">
                                <span class="far fa-eye"></span>
                            </button>
                        </span>

                        <span data-placement="top" data-toggle="tooltip" title="Delete">
                            <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"
                                onclick="deleteUser('<%= users[i]._username %>')">
                                <span class="fas fa-trash"></span>
                            </button>
                        </span>
                    </td>
                </tr>
                <% } %>
            </tbody>

        </table>

    </div> <!-- div.table-responsive -->
</div><!-- div.container -->
<% include ./partials/footer %>